<div class="m-4">
  <h1 class="pb-2">My tasks</h1>

  <% @tasks.each do |task| %>
    <div class="d-flex">
    <% if task.completed %>
      <i class="fa-solid fa-square-check pe-2"></i>
    <% else %>
      <i class="fa-regular fa-square pe-2"></i>
    <% end %>
      <p class="pe-2"><%= link_to task.title, task_path(task) %></p>
      <i class="fa-solid fa-trash-can"></i>
      <%= link_to "", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>
  <% end %>

  <p class="border-top pt-3"><%= link_to "+ Add a new task", tasks_new_path %></p>
</div>
